<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>

    <!-- ✅ COMMON CSS -->
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <div class="container">
      <h1 class="title">URL Shortener</h1>

      <!-- ✅ ONE-TIME GENERATED MESSAGE -->
      <% if (locals.id) { %>
        <p class="success-msg">
          ✅ Short URL Generated:
          <a href="/url/<%= id %>" target="_blank">
            /url/<%= id %>
          </a>
        </p>
      <% } %>

      <!-- ✅ FORM -->
      <div class="form-box">
        <form action="/url" method="post" class="url-form">
          <label>Enter your original URL:</label>
          <input
            type="text"
            name="url"
            placeholder="https://example.com"
            required
          />
          <button type="submit">Generate</button>
        </form>
      </div>

      <!-- ✅ TABLE WITH SHORT LINKS -->
      <div class="table-box">
        <% if (urls && urls.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>S. No</th>
                <th>Short ID</th>
                <th>Original URL</th>
                <th>Shortened Link</th>
                <th>Clicks</th>
              </tr>
            </thead>
            <tbody>
              <% urls.forEach((url, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= url.shortId %></td>
                  <td><%= url.redirectUrl %></td>

                  <!-- ✅ RELATIVE SHORT LINK -->
                  <td>
                    <a href="/url/<%= url.shortId %>" target="_blank">
                      /url/<%= url.shortId %>
                    </a>
                  </td>

                  <td><%= url.visitHistory.length %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="empty-msg">No URLs created yet.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>